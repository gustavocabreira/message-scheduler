APP_NAME="Message Scheduler"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=message_scheduler
DB_USERNAME=message_scheduler
DB_PASSWORD=secret

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@message-scheduler.app"
MAIL_FROM_NAME="${APP_NAME}"

# Octane
OCTANE_SERVER=swoole

# Huggy OAuth2
HUGGY_CLIENT_ID=
HUGGY_CLIENT_SECRET=
HUGGY_REDIRECT_URI="${APP_URL}/api/auth/huggy/callback"
HUGGY_API_URL=https://api.huggy.app

# Reverb (WebSockets)
REVERB_APP_ID=message-scheduler
REVERB_APP_KEY=message-scheduler-key
REVERB_APP_SECRET=message-scheduler-secret
REVERB_HOST=reverb
REVERB_PORT=8080
REVERB_SCHEME=http

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost:3000,localhost:8000
VITE_APP_URL="${APP_URL}"
